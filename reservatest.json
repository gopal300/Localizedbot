{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.Text elements",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Text",
      "placeholder": "Nombre",
      "style": "text",
      "maxLength": 0,
      "id": "SimpleVal"
    },
     {
      "type": "Input.Text",
      "placeholder": "Numero de Telefono",
      "style": "tel",
      "maxLength": 0,
      "id": "TelVal"
    },
    {
      "type": "Input.Text",
      "placeholder": "¿Quiere añadir información adicional?",
      "style": "text",
      "isMultiline": true,
      "maxLength": 0,
      "id": "MultiLineVal"
    },
    {
      "type": "Input.Date",
      "placeholder": "Fecha",
      "id": "DateVal",
      "value": "2018-04-10"
    },
    {
      "type": "Input.Time",
      "placeholder": "Check-in Hora",
      "id": "TimeVal",
      "value": "00:00"
    },
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.ChoiceSet",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "Régimen de uso?"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "SingleSelectVal",
      "style": "expanded",
      "value": "1",
      "choices": [
        {
          "title": "Solo Alojamiento",
          "value": "1"
        },
        {
          "title": "Con Desayuno",
          "value": "2"
        },
        {
          "title": "Media Pensión",
          "value": "3"
        }
      ]
    },
   
    {
      "type": "TextBlock",
      "size": "medium",
      "weight": "bolder",
      "text": "Input.Toggle",
      "horizontalAlignment": "center"
    },
    {
      "type": "Input.Toggle",
      "title": "I accept the terms and condition",
      "valueOn": "true",
      "valueOff": "false",
      "id": "AcceptsTerms"
    },
    {
      "type": "Input.Toggle",
      "title": "Do you want the booking Reciept?",
      "valueOn": "RedCars",
      "valueOff": "NotRedCars",
      "id": "ColorPreference"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
       "On Completion": "True",
      "data": {
        "id": "1234567890"
      }
    },
    {
      "type": "Action.ShowCard",
      "title": "Show Card",
      "card": {
        "type": "AdaptiveCard",
        "body": [
          {
            "type": "Input.Text",
            "placeholder": "enter comment",
            "style": "text",
            "maxLength": 0,
            "id": "CommentVal"
          }
        ],
        "actions": [
          {
            "type": "Action.Submit",
            "title": "OK"
          }
        ]
      }
    }
  ]
}
